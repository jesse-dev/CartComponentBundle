    }

    /**
     * Get discount total after tax
     *  , by getting the sum of the 3 different types of discounts
     *  By default, there is no overlap between Specified vs Item/Shipment
     */
    public function getPostTaxDiscountTotal()
    {
        $total = $this->getPostTaxItemDiscountTotal() + $this->getPostTaxShipmentDiscountTotal();
        
        $excludeSpecifiedItems = $this->_cart->getExcludeSpecifiedDiscountItems();
        $excludeSpecifiedShipments = $this->_cart->getExcludeSpecifiedDiscountShipments();

        if ($excludeSpecifiedItems) {
            $total += $this->getPostTaxSpecifiedItemDiscountTotal();
        }

        if ($excludeSpecifiedShipments) {
            $total += $this->getPostTaxSpecifiedShipmentDiscountTotal();
        }

        return $this->currency($total);
    }

    /**
     * Get taxable shipment total
     *  , by getting the sum of taxable shipments; regardless of type
     */
    public function getTaxableShipmentTotal()
    {
        $total = 0;
        if (count($this->_cart->getShipments()) > 0) {
            foreach($this->_cart->getShipments() as $shipmentKey => $shipment) {
                if ($shipment->getIsTaxable()) {
                    $total += $this->currency($shipment->getPrice());
                }
            }
        }
        return $this->currency($total);
    }

    /**
     * Get discountable shipment total
     *
     * @param bool $unspecifiedOnly : Retrieve only shipments which are not already discounted
     */
    public function getDiscountableShipmentTotal()
    {
        $total = 0;
        $unspecifiedOnly = $this->_cart->getExcludeSpecifiedDiscountShipments();

        if (count($this->_cart->getShipments()) > 0) {

            // Get references to discounted shipments
            $specifiedShipmentKeys = $this->_cart->getSpecifiedDiscountShipmentKeys();

            foreach($this->_cart->getShipments() as $shipmentKey => $shipment) {
                if ($shipment->getIsDiscountable()) {

                    if ($unspecifiedOnly && isset($specifiedShipmentKeys[$shipmentKey])) {
                        continue;
                    }

                    if ($shipment->getIsDiscountable()) {
                        $total += $this->currency($shipment->getPrice());
                    }
                }
            }
        }
        return $this->currency($total);
    }

    /**
     * Get discountable item total
     *
     * @param bool $unspecifiedOnly : Retrieve only shipments which are not already discounted
     */
    public function getDiscountableItemTotal()
    {
        $total = 0;
        $unspecifiedOnly = $this->_cart->getExcludeSpecifiedDiscountItems();

        if (count($this->_cart->getItems()) > 0) {

            // Get references to discounted items
            $specifiedItemKeys = $this->_cart->getSpecifiedDiscountItemKeys();

            foreach($this->_cart->getItems() as $itemKey => $item) {

                if ($unspecifiedOnly && isset($specifiedItemKeys[$itemKey])) {
                    continue;
                }

                if ($item->getIsDiscountable()) {
                    $total += $this->currency($item->getPrice() * $item->getQty());
                }
            }
        }
        return $this->currency($total);
    }

    /**
     * Get taxable item total
     */
    public function getTaxableItemTotal()
    {
        $total = 0;
        if (count($this->_cart->getItems()) > 0) {
            foreach($this->_cart->getItems() as $productKey => $item) {
                if ($item->getIsTaxable()) {
                    $total += $this->currency($item->getPrice() * $item->getQty());
                }
            }
        }
        return $this->currency($total);
    }

    /**
     * Get total of taxable items and shipments
     */
    public function getTaxableTotal()
    {
        return $this->currency($this->getTaxableItemTotal() + $this->getTaxableShipmentTotal());
    }

}