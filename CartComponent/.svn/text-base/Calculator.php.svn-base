    /**
     * Get Total Specified Item/Shipment Discount after Tax
     */
    public function getPreTaxSpecifiedShipmentDiscountTotal()
    {
        $total = $this->currency(0);
        if (count($this->_cart->getPreTaxDiscounts()) > 0) {
